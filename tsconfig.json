{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "baseUrl": ".",
    "paths": {
      "@/*": ["client/src/*"],
      "@shared/*": ["shared/*"],
      "@assets/*": ["attached_assets/*"]
    },
    "jsx": "react-jsx",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "types": ["node", "vite/client"],
    "noEmit": true,
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "client/**/*",
    "server/**/*",
    "shared/**/*",
    "script/**/*",
    "tailwind.config.ts",
    "vite.config.ts",
    "drizzle.config.ts"
  ],
  "exclude": ["node_modules", "dist"]
}
